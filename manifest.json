{
    "name": "nucleotide-pro",
    "version": "1.0",
    "description": "Easy access to nucleotide translations",
    "manifest_version": 2,

    "incognito": "split",

    "background": {
        "scripts": ["js/background.js"]
    },

    "browser_action": {
        "default_popup": "html/popup.html"
    },

    "permissions": [
        "activeTab",
        "background",
        "contextMenus",
        "https://web.expasy.org/cgi-bin/translate/*"
    ],

    "icons": {
        "16": "icons/icon16.png",
        "128": "icons/icon128.png"
    }
}
